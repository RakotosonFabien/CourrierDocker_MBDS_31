@page
@model CourrierDocker_MBDS_31.Pages.courrier.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="col-md-12">
    <div class="card shadow">
        <!-- Titre contenu -->
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Liste des courriers recus</h6>

        </div>
        <!--fin titre contenu-->
        <!-- Liste des courriers -->
        <div class="card-body" id="liste-courrier">
            <!--courrier-->
            <div class="row g-3 align-items-center">
                <div class="col-auto">
                    Trier par :
                </div>
                <div class="col-auto">

                    <select class="form-control input-lg">
                        <option>Date de reception</option>
                        <option>Profil</option>
                        <option>Statut</option>
                        <option>Priorite</option>
                    </select>
                </div>
                <div class="col-auto">
                    <select class="form-control input-lg">
                        <option>desc</option>
                        <option>asc</option>
                    </select>
                </div>
                <div class="col-auto">
                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                    <label class="form-check-label" for="defaultCheck1">
                        Afficher validés
                    </label>
                </div>
                <div class="col-auto">
                    <button class="btn btn-primary">Trier</button>
                </div>
            </div>
                @foreach (var item in Model.Courrier)
                {
                <a asp-page="./Details" asp-route-id="@item.Id">
 |
                    <div class="card bg-light text-black shadow courrier-card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-10">
                                    <text class="text-black-50">
                                        De
                                        <text class="text-primary" data-toggle="tooltip" title="Secretaire - Gestion Entreprise">@Html.DisplayFor(modelItem => item.ExpediteurVal)</text>
                                        a
                                        <text class="text-primary" data-toggle="tooltip" title="Directeur - Gestion Entreprise">@item.DestinatairesVal</text>
                                    </text>
                                    <div class="text-black-50 small">
                                        @item.Objet
                                    </div>
                                    <span data-toggle="tooltip" title="fichier.txt; fichier2.zip; Tsy ambolena coco.zip">2 fichiers</span>
                                    <a href="#" class="d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                                        <i class="fas fa-download fa-sm text-white-50"></i> Telecharger fichiers
                                    </a>
                                </div>
                                <div class="col-md-2">
                                    <div class="text-black-50 small float-right">@item.DateCreation</div>
                                </div>
                            </div>
                            <hr />
                            <!--degre importance du courrier-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="text-black-50 small float-left">
                                        Statut : <text class="text-success">
                                            Valide
                                        </text>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="text-black-50 small float-right">
                                        Priorite : <text class="text-danger">
                                            @item.PrioriteVal
                                        </text>
                                    </div>
                                </div>
                            </div>
                            <!--fin importance du courrier-->

                        </div>
                    </div>
                </a>
                }
        </div>
        <!--fin liste des courriers-->
        <div class="row">
            <div class="col-md-12">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Précédent</a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Suivant</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

</div>

         